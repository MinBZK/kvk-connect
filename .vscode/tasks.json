{
    "_comment": "Our Justfile is used to define tasks, so here we call Just to run them",
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check-all",
            "detail": "Run all checks (lint, type, tests, coverage)",
            "type": "shell",
            "command": "just",
            "args": [
                "check-all"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Ruff lint",
            "detail": "Lint and fix code",
            "type": "shell",
            "command": "just",
            "args": [
                "lint"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "PyRight",
            "detail": "Type check code",
            "type": "shell",
            "command": "just",
            "args": [
                "typing"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "PyTest",
            "detail": "Run tests with coverage",
            "type": "shell",
            "command": "just",
            "args": [
                "cov"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Pre-commit",
            "detail": "Run pre-commit hooks",
            "type": "shell",
            "command": "just",
            "args": [
                "pc"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
